@model ListaCompras.Domain.Model.Produto

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Unidade)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Unidade)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.QuantidadeMinima)
            <div class="col-md-10">
                @Html.EditorFor(model => model.QuantidadeMinima)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" name="submitButton" class="btn btn-default" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deletar" name="submitButton" class="btn btn-default" />
            </div>
        </div>
    </div>
}